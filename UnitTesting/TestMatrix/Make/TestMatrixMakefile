objects = TestMatrixApplication.o \
          TestMatrix.o \
          UnitTesting.o


Flood: $(objects)
	g++ $(objects) -o Flood 


# Main function

TestMatrixApplication.o: ../TestMatrixApplication.cpp
	g++ -c ../TestMatrixApplication.cpp -o TestMatrixApplication.o

# Test matrix

TestMatrix.o: ../TestMatrix.cpp
	g++ -c ../TestMatrix.cpp -o TestMatrix.o

# Utilities

UnitTesting.o: ../../../Flood/Utilities/UnitTesting.cpp
	g++ -c ../../../Flood/Utilities/UnitTesting.cpp -o UnitTesting.o

clean:
	rm $(objects) Flood


